mixin svg_rect(x,y,color)
  rect(x=x y=y height=10 width=10 style={fill:color, stroke:"none"})

mixin logo(size,bcol,hcol)
  svg(viewBox="0 0 40 40" width=size)
    +svg_rect(0, 0, bcol)
    +svg_rect(15, 0, hcol)
    +svg_rect(30, 0, bcol)
    +svg_rect(0, 15, bcol)
    +svg_rect(15, 15, bcol)
    +svg_rect(30, 15, bcol)
    +svg_rect(0, 30, bcol)
    +svg_rect(15, 30, bcol)
    +svg_rect(30, 30, bcol)

doctype html
html
  include inc/header

  body
  each message in errmessages
    .alert.alert-danger !{message}
  .navbar.navbar-default.navbar-static-top(role='navigation')
      .container
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='#',style="padding-top:18px;")
              +logo(25,tank_color,"#fff")
            a.navbar-brand(href='#')
              span t4tm
          .navbar-collapse.collapse
            ul.nav.navbar-nav
              - each val, key in navbar
                - if (id == key)
                  li.active
                    a(href='#{key}') #{val}
                - else            
                  li
                    a(href='#{key}') #{val}
            if loggedin
              p.navbar-right.navbar-text
                | Hi, #{name}! | 
                a(href='/logout') Log out
    block content
  
  include inc/footer